<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.lease.web.app.mapper.FacilityInfoMapper">

    <select id="selectListByRoomId" resultType="com.atguigu.lease.model.entity.FacilityInfo">
        select
            fi.id,
            fi.type,
            fi.name,
            fi.icon
        from facility_info fi
                 left join room_facility rf
        on fi.is_deleted = 0 and
           rf.is_deleted = 0 and
           fi.id = rf.facility_id
        where
            rf.room_id = #{id}
    </select>
</mapper>
